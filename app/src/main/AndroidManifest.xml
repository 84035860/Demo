<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hspcadmin.htmlproject" >

    <!--屏幕切换监听器-->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <!-- 允许应用程序访问有关的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许应用程序访问WIFI网卡的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许应用程序改变网络状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- 允许应用程序改变WIFI连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 连接网络请求 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 杀死后台进程权限 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <!-- 手机振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 亮屏锁 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 设置桌面快捷方式权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <!-- 网络判断 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 查看网络权限 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- 允许应用程序完全使用网络 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!--<permission android:name="android.permission.BAIDU_LOCATION_SERVICE" />-->

    <!-- 友盟分享权限：QQ、QQ空间所需要权限 -->
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <!-- 授权权限 -->
    <!-- 获取账户信息 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- 定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- 短信、邮件、彩信等收发权限 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <!-- 外部存储读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--API>=22时使用-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:name="com.example.hspcadmin.htmlproject.exception.AppException"
        android:label="@string/app_name">
        <!--

                    Activity

        -->
        <activity android:name=".activity.WelcomeActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.home.MainHostActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMain"/>
        <activity android:name=".activity.abstracts.BaseViewActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMain"
            />
        <activity android:name=".kotlin.KotlinActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMain"/>
        <activity android:name=".activity.WebViewActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
        <!--

                    Service

        -->
        <service
            android:name="com.example.hspcadmin.htmlproject.service.ProperService"
            android:exported="false" />

        <!--<receiver android:name="com.example.hspcadmin.htmlproject.service.AutoStartBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.HOME"/>
            </intent-filter>
        </receiver>-->
    </application>

</manifest>