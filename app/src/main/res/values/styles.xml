<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NotitleBar" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:background">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@style/AppTheme.Slide.Animation</item>-->
    </style>

    <style name="main_radio_button">
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 白天模式 -->
    <style name="ThemeDayTime">
        <!-- 页面背景色 -->
        <item name="bg_color">@color/white</item>
        <item name="font_color">@color/black</item>
        <item name="line_color">@color/black</item>
        <item name="edit_color">@color/black</item>
        <item name="title_bg_color">@color/trade_tab</item>
        <item name="title_font_color">@color/white</item>
        <item name="button_bg_color">@color/colorPrimary</item>
        <item name="button_font_color">@color/white</item>
        <item name="back_img">@mipmap/btn_top_back_pressed</item>
    </style>

    <!-- 夜间模式 -->
    <style name="ThemeDayNight">
        <!-- 页面背景色 -->
        <item name="bg_color">@color/trade_tab</item>
        <item name="font_color">@color/white</item>
        <item name="line_color">@color/white</item>
        <item name="edit_color">@color/white</item>
        <item name="title_bg_color">@color/colorPrimary</item>
        <item name="title_font_color">@color/white</item>
        <item name="button_bg_color">@color/white</item>
        <item name="button_font_color">@color/colorPrimary</item>
        <item name="back_img">@mipmap/btn_top_back_normal</item>
    </style>

</resources>
