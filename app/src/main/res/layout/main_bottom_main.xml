<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/yellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_bottom_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_radio_1"
                style="@style/main_radio_button"
                android:drawableTop="@mipmap/home_icon_false"
                android:text="首页" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_radio_2"
                style="@style/main_radio_button"
                android:drawableTop="@mipmap/home_icon_false"
                android:enabled="false"
                android:text="行情" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_radio_3"
                style="@style/main_radio_button"
                android:drawableTop="@mipmap/home_icon_false"
                android:enabled="false"
                android:text="交易" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_radio_4"
                style="@style/main_radio_button"
                android:drawableTop="@mipmap/home_icon_false"
                android:enabled="false"
                android:text="资讯" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_radio_5"
                style="@style/main_radio_button"
                android:drawableTop="@mipmap/home_icon_false"
                android:enabled="false"
                android:text="我的" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>