<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.hspcadmin.htmlproject.view.BottomNavigationBar
        android:id="@+id/demo_host_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"/>

    <com.example.hspcadmin.htmlproject.view.CustomViewPager
        android:id="@+id/demo_host_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/demo_host_bottom"/>

    <ImageView
        android:id="@+id/main_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/setting"
        android:layout_alignParentRight="true"/>

</RelativeLayout>